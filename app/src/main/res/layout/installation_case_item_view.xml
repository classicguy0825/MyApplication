<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		android:id="@+id/installationCaseToolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/violetMainColor"
		android:gravity="center">
	</android.support.v7.widget.Toolbar>

	<ScrollView
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
		  android:orientation="vertical"
		  android:layout_width="match_parent"
		  android:layout_height="match_parent">

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="시공사례"
				android:textSize="25dp"
				android:textStyle="bold"
				android:padding="10dp"
				android:textColor="@color/black"/>

			<TextView android:id="@+id/product_label"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="15dp"
				android:padding="10dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:text="2017년 6월 14일에 작성 되었습니다."
				android:textSize="15dp"
				android:padding="10dp"/>

			<TextView android:id="@+id/status"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="17dp"
				android:padding="10dp"/>

			<com.windeco.listviewfeed.view.FeedImageView
				android:id="@+id/detailViewImg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:scaleType="fitXY"
				android:visibility="visible"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp">
				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="사진을 터치하면 수리 전 모습도 볼 수 있습니다."
					android:textSize="12dp"
					android:textColor="@color/timestamp"
					android:gravity="center"/>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/requestBtnBackgroud"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="20dp">

				<LinearLayout
					android:id="@+id/likeBtnLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="12dp"
					android:padding="10dp"
					android:background="@drawable/xml_border_mainview_right_button"
					android:layout_weight="1"
					android:clickable="true"
					android:gravity="center">

					<ImageView
						android:id="@+id/likeBtn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/unlike"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="좋아요"
						android:textSize="13dp"/>
				</LinearLayout>

				<Button
					android:id="@+id/consultResBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:background="@drawable/xml_border_mainview_left_button"
					android:textSize="13dp"
					android:textColor="@color/white"
					android:text="1:1 견적문의"
					android:layout_margin="10dp"
					android:layout_weight="1">
				</Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
