<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <com.windeco.listviewfeed.view.BannerImageView
            android:id="@+id/bannerImageView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/banner_code"
            android:layout_above="@+id/banner_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/banner_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/banner_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/banner_price"
            android:layout_below="@+id/banner_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>


</RelativeLayout>